                @Html.DisplayNameFor(model => model.Marka)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var urun in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => urun.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => urun.Fiyat)
            </td>
            <td>
                @Html.DisplayFor(modelItem => urun.Aciklama)
            </td>
            <td>
                @Html.DisplayFor(modelItem => urun.İşlemciModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => urun.GPUModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => urun.RamKapasitesi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => urun.EkranBoyutu)
            </td>
           @* <td>
                @Html.DisplayFor(modelItem => urun.İşletimSistemi)
            </td>*@
            <td>
                @*@Html.DisplayFor(modelItem => item.Foto)*@
                    <img src="/img/@urun.Foto" alt="@urun. Ad adlı kitabın kapak göreseli" height="120" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => urun.Kategori.Ad)
            </td>
            <td>
                @Html.DisplayFor(modelItem => urun.Marka.Ad)
            </td>
            <td>
                 <a asp-action="Edit" asp-route-id="@urun.Id"><i class="fa-solid fa-pen"></i></a> <br>
                 <a asp-action="Details" asp-route-id="@urun.Id"><i class="fa-solid fa-circle-info"></i></a><br>
                 <a asp-action="Delete" asp-route-id="@urun.Id"><i class="fa-solid fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
