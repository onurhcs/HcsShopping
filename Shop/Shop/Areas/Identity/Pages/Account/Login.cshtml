@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}

<div class="inner_page-banner one-img">
</div>
<br />

<br />
<div class="row" style="margin-left:38%;">
    <div class="col-md-4">
        <font size = "5">Kullanıcı Girişi</font>
        <br />
        <br />
        <section>
            <form id="account" method="post">

                <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Email" class="form-label">Email : </label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="isim@ornek.com" />

                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label asp-for="Input.Password" class="form-label">Şifre :</label>
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Şifre" />

                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="checkbox mb-3">
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-success">Giriş Yap</button>
                </div>
                <br />
                <div>
                    <p>
                        <a id="forgot-password" asp-page="./ForgotPassword">Şifremi Unuttum</a>
                    </p>
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Hemen Üye Ol</a>
                    </p>
                    <p>
                        <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">E-posta onayını yeniden gönder</a>
                    </p>
                </div>
            </form>
        </section>
    </div>

</div>
<br />
<br />
<br />

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
