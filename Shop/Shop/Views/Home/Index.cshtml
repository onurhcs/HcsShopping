				</div>
			</div>
			<div class="col-md-12">
				<div class="row">
					<div class="products-tabs">
						<div id="tab1" class="tab-pane active">
							<div class="products-slick" data-nav="#slick-nav-1">

								@foreach (var item in Model.Urunler)
								{
									if (@item.Kategori.KategoriId == 1011)
