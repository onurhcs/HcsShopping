@model Shop.Models.AnaSayfaCokluListeleme
@{
	ViewData["Title"] = "Home Page";
}
<div class="section">
	<div class="container">
		<div class="row">
			@foreach (var item in Model.Kategoriler)
			{
				<div class="col-md-4 col-xs-6">
					<div class="shop">
						<div class="shop-img">
							<img src="~/img/@item.foto"  alt="">
						</div>
						<div class="shop-body">
							<h3>@item.Ad<br></h3>
							<a href="/Urun/Index/?kategoriId=@item.KategoriId" class="cta-btn"> Şimdi satın al <i class="fa fa-arrow-circle-right"></i></a>
						</div>
					</div>
				</div>
			}
		</div>
	</div>
</div>
<div class="section">
	<div class="container">
